{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],

  "trailingComma": "all",
  "semi": false,
  "singleQuote": true,
  "bracketSameLine": true,
  "jsxSingleQuote": true,
  "tabWidth": 2,

  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
