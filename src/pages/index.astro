---
import Layout from "../layouts/Layout.astro";
import LOGO from "../assets/ARC25.png";
import LOGOS_FOOTER from "../assets/LOGOS_FOOTER.png";
import { Image } from "astro:assets";
import FacebookIcon from "../components/icons/FacebookIcon.astro";
import InstagramIcon from "../components/icons/InstagramIcon.astro";
import XIcon from "../components/icons/XIcon.astro";
import YoutubeIcon from "../components/icons/YoutubeIcon.astro";
---

<Layout title="Festival ARC 2025 | Convocatoria abierta">
  <header
    class="grid justify-center w-fit mx-auto group px-4 pt-24"
  >
    <h1 class="sr-only">Festival ARC 2025, Próximamente</h1>
    <figure class="overfloh-hidden h-fit w-fit mx-auto pb-4">
      <Image
        src={LOGO}
        width={500}
        height={180}
        alt="Logo Festival ARC 2024"
        class="aspect-[500/180] h-fit"
        loading="eager"
      />
    </figure>
  </header>

  <main class="h-full w-full max-w-2xl mx-auto px-4 pb-16">
    <section class="grid gap-5">
      <h2
        class="text-3xl uppercase tracking-tight text-secondary leading-none font-black text-center"
      >
        Convocatoria Abierta
        <span class="block font-normal normal-case text-lg tracking-normal"
          >Hasta el 21 de Septiembre</span
        >
      </h2>
      <div class="flex flex-col gap-4 max-w-xl mx-auto justify-center mt-10 relative">
        <a
          target="_blank"
          href="https://drive.google.com/file/d/19CRoew4pbHgAQ9FoxNgpNeWyWrriNvQn/view"
class="text-[#9f00d3] font-bestoom text-2xl md:text-4xl text-center uppercase tracking-wide bg-[#efd43d] w-fit pb-0.5 md:pb-1 pt-2 md:pt-3 px-6 mx-auto z-10 relative shadow-lg shadow-black/20 hover:skew-y-[-4deg] transition duration-300 delay-100"
        >
          Lee atentamente las bases
        </a>

        <a
          href="/convocatoria"
class="bg-[#2495e9] font-dk text-2xl md:text-3xl leading-none text-center tracking-wide text-secondary w-fit py-2 md:py-3 px-6 mx-auto -skew-y-[4deg] shadow-lg shadow-black/20 hover:skew-y-0 transition duration-300 delay-100"
        >
          Completa el Formulario de Postulación
        </a>
      </div>
      <p class="text-center text-secondary text-xl mt-10 leading-none">¡Nos pondremos en contacto contigo muy pronto!</p>
      </section>
  </main> 

  <footer
    class="grid xl:grid-flow-col justify-center items-center gap-8 xl:gap-20 bg-[#170d19] relative bottom-0 w-full left-0 p-4"
  >
    <div class="flex items-center gap-8 w-fit mx-auto">
      <Image
        height={100}
        src={LOGOS_FOOTER}
        alt="Logo de SEREMI Región de Coquimbo"
        class="h-14 w-fit shrink-0"
        loading="eager"
      />
    </div>
    <div class="flex gap-4 text-secondary w-fit h-fit mx-auto">
      <a
        aria-label="Visita nuestro Facebook"
        href="https://facebook.com/FestivalARC"
        target="_blank"
      >
        <FacebookIcon />
      </a>
      <a
        aria-label="Visita nuestro Instagrma"
        href="https://www.instagram.com/festival_arc"
        target="_blank"><InstagramIcon /></a
      >
      <a
        aria-label="Visita nuestro Twitter"
        href="https://x.com/festivalarc"
        target="_blank"><XIcon /></a
      >
      <a
        aria-label="Visita nuestro Youtube"
        href="https://www.youtube.com/channel/UC5dv2x9AcqEAgKcuRBMHlgg"
        target="_blank"><YoutubeIcon /></a
      >
    </div>
    <p
      class="text-secondary xl:absolute xl:right-8 xl:bottom-4 text-sm w-fit mx-auto self-end"
    >
      <strong>ARC 2025</strong> | Desarrollado por <a
        href="https://github.com/strocs"
        class="hover:text-[#fcea0d] transition duration-150">StrocsDev</a
      >
    </p>
  </footer>
</Layout>
