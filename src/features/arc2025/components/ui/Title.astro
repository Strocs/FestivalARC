---
interface Props {
  subTitle?: string
}

const { subTitle } = Astro.props
---

<h2 class='mx-auto w-fit py-12 md:space-y-2'>
  <span
    class='font-dk bg-25-accent text-25-primary mx-auto block w-fit -skew-y-3 rounded-xs px-6 text-center text-[3.4rem] leading-[3.4rem] shadow-xl md:text-8xl md:leading-none'>
    <slot />
  </span>
  {
    subTitle && (
      <span class='font-neris bg-25-blue text-25-white mx-auto block w-fit rounded-xs px-4 pb-2 text-2xl font-semibold shadow-md md:text-4xl'>
        {subTitle}
      </span>
    )
  }
</h2>
