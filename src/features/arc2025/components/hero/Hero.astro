---
import { Image } from 'astro:assets'

import LOGO from '@/features/arc2025/assets/ARC25.webp'
---

<section class='relative h-[90svh] px-4'>
  <section class='flex h-full flex-col items-center justify-center'>
    <figure class='mx-auto h-fit w-fit pb-4'>
      <Image
        src={LOGO}
        width={500}
        height={180}
        alt='Logo Festival ARC 2024'
        class='aspect-[500/180] h-fit'
        loading='eager'
      />
    </figure>
    <div class='h-fit space-y-1 md:space-y-3'>
      <p
        class='font-dk bg-25-blue relative z-10 mx-auto w-fit -skew-y-3 rounded-xs px-4 text-center text-4xl text-white shadow-md md:text-7xl'>
        18 y 19 de Octubre
      </p>
      <p
        class='font-bestoom bg-25-accent text-25-primary mx-auto w-fit px-2 pt-1.5 text-center text-2xl shadow-md md:pt-2 md:text-5xl'>
        Parque Pedro de Valdivia
      </p>
      <p class='text-25-white font-bestoom mx-auto w-fit text-2xl md:text-4xl'>
        La Serena
      </p>
    </div>
  </section>
  <span
    class='text-25-black absolute right-0 bottom-0 left-0 mx-auto size-8 w-fit scale-200 animate-bounce'>
    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='24'
      height='24'
      viewBox='0 0 24 24'
      fill='currentColor'
      ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path><path
        d='M20.118 3h-16.225a2.914 2.914 0 0 0 -2.503 4.371l8.116 13.549a2.917 2.917 0 0 0 4.987 .005l8.11 -13.539a2.914 2.914 0 0 0 -2.486 -4.386z'
      ></path></svg
    >
  </span>
</section>
