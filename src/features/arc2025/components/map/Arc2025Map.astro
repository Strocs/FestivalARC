---
import Title from '@/features/arc2025/components/ui/Title.astro'
import MAPA from '@/features/arc2025/assets/mapa_temp.jpeg'
import { Image } from 'astro:assets'
---

<section class='relative w-full'>
  <section class='px-4 pb-40'>
    <Title subTitle='Distribución de Escenarios'>Mapa ARC</Title>
    <Image
      src={MAPA}
      alt='Mapa de Distribución'
      width={MAPA.width}
      height={MAPA.height}
      class='mx-auto aspect-auto w-full md:max-w-7xl'
    />
  </section>

  <div
    aria-hidden='true'
    class='bg-25-black absolute -bottom-15 h-28 w-full md:h-30'>
  </div>
</section>
