---
import { Image } from 'astro:assets'

import LOGO from './assets/ARC25.png'
import LOGOS_FOOTER from './assets/LOGOS_FOOTER.png'

import FacebookIcon from '@/features/shared/components/icons/FacebookIcon.astro'
import InstagramIcon from '@/features/shared/components/icons/InstagramIcon.astro'
import XIcon from '@/features/shared/components/icons/XIcon.astro'
import YoutubeIcon from '@/features/shared/components/icons/YoutubeIcon.astro'

import Arc2025Layout from './layouts/Arc2025Layout.astro'
import Arc2025Schedule from './sections/schedule/components/Arc2025Schedule.astro'
---

<Arc2025Layout>
  <header class='group mx-auto grid w-fit justify-center px-4 pt-24'>
    <h1 class='sr-only'>Festival ARC 2025, Próximamente</h1>
    <figure class='overfloh-hidden mx-auto h-fit w-fit pb-4'>
      <Image
        src={LOGO}
        width={500}
        height={180}
        alt='Logo Festival ARC 2024'
        class='aspect-[500/180] h-fit'
        loading='eager'
      />
    </figure>
  </header>

  <main class='mx-auto h-full w-full px-4 pb-16'>
    <section class='grid gap-5'>
      <div class='relative mx-auto flex max-w-xl flex-col justify-center gap-2'>
        <p
          class='font-bestoom relative z-10 mx-auto w-fit bg-[#efd43d] px-6 pt-2 pb-0.5 text-center text-2xl tracking-wide text-[#f70d61] uppercase shadow-lg shadow-black/20 md:pt-3 md:text-4xl'>
          Convocatoria cerrada
        </p>

        <p
          class='font-dk text-secondary mx-auto w-fit -skew-y-[4deg] bg-[#2495e9] px-6 py-2 text-center text-2xl leading-none tracking-wide shadow-lg shadow-black/20 md:py-3 md:text-4xl'>
          Pronto más información
        </p>
      </div>
      <p class='text-secondary mt-14 text-center leading-none'>
        ¿Tienes alguna duda? escríbenos a <a
          target='_blank'
          href='mailto:programacion@festivalarc.com'
          class='hover:text-secondary text-[#efd43d] duration-150'
          >programacion@festivalarc.com</a
        >
      </p>
    </section>

    <Arc2025Schedule />
  </main>

  <footer
    class='relative bottom-0 left-0 grid w-full items-center justify-center gap-8 bg-[#170d19] p-4 xl:grid-flow-col xl:gap-20'>
    <div class='mx-auto flex w-fit items-center gap-8'>
      <Image
        height={100}
        src={LOGOS_FOOTER}
        alt='Logo de SEREMI Región de Coquimbo'
        class='h-14 w-fit shrink-0'
        loading='eager'
      />
    </div>
    <div class='text-secondary mx-auto flex h-fit w-fit gap-4'>
      <a
        aria-label='Visita nuestro Facebook'
        href='https://facebook.com/FestivalARC'
        target='_blank'>
        <FacebookIcon />
      </a>
      <a
        aria-label='Visita nuestro Instagrma'
        href='https://www.instagram.com/festival_arc'
        target='_blank'><InstagramIcon /></a
      >
      <a
        aria-label='Visita nuestro Twitter'
        href='https://x.com/festivalarc'
        target='_blank'><XIcon /></a
      >
      <a
        aria-label='Visita nuestro Youtube'
        href='https://www.youtube.com/channel/UC5dv2x9AcqEAgKcuRBMHlgg'
        target='_blank'><YoutubeIcon /></a
      >
    </div>
    <p
      class='text-secondary mx-auto w-fit self-end text-sm xl:absolute xl:right-8 xl:bottom-4'>
      <strong>ARC 2025</strong> | Desarrollado por <a
        href='https://github.com/strocs'
        class='transition duration-150 hover:text-[#fcea0d]'>StrocsDev</a
      >
    </p>
  </footer>
</Arc2025Layout>
