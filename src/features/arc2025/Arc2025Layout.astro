---
import '@/styles/global.css'
import Layout from '@/features/shared/layouts/Layout.astro'
import Footer from '@/features/arc2025/components/ui/Footer.astro'

interface Props {
  title?: string
}

const {
  title = 'Festival ARC 2025 - Festival de las Artes Región de Coquimbo',
} = Astro.props
---

<Layout
  title={title}
  description='Festival de las Artes Región de Coquimbo (Festival ARC 2025) del 18 y 19 de Octubre, Parque Pedro de Valdivia, La Serena.'
  favicon='/ARC25.png'>
  <slot />
  <Footer />
</Layout>

<style is:global>
  @reference '../../styles/global.css';

  [data-page='main'] .streaming-video {
    @apply mx-auto max-w-5xl! rounded-md md:-mt-18;
  }

  [data-page='programacion'] .streaming-video {
    @apply z-30 mx-auto mt-10 max-w-xs! rounded md:fixed! md:right-2 md:bottom-2 md:mt-0;
  }
</style>
