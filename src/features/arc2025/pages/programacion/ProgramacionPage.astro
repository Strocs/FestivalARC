---
import { Image } from 'astro:assets'
import Header from '../../components/ui/Header.astro'
import Arc2025Layout from '../../Arc2025Layout.astro'
import Schedule from './sections/Schedule.astro'

import FONDO_WEB_PROGRAMACION from '@/features/arc2025/assets/FONDO_VERDE.webp'
import Title from '../../components/ui/Title.astro'
---

<Arc2025Layout title='Festival ARC 2025 | Programación Sábado 18 y Domingo 19'>
  <Header />

  <Image
    aria-hidden='true'
    alt='Fondo de la sección Programación del Festival ARC 2025 - Festival de las Artes Región de Coquimbo'
    src={FONDO_WEB_PROGRAMACION}
    height={FONDO_WEB_PROGRAMACION.height}
    width={FONDO_WEB_PROGRAMACION.width}
    loading='lazy'
    class='fixed top-0 right-0 left-0 -z-30 h-lvh w-full object-cover object-center landscape:h-full'
  />

  <main>
    <Title subTitle='Sábado 18 y Domingo 19'>Programación</Title>
    <a
      href='https://drive.google.com/file/d/1xz-RtxTbO_5vZQt9hYLZtpCbJyqDxK05/view'
      target='_blank'
      rel='noopener noreferrer'
      class='bg-25-white font-xl text-25-primary hover:bg-25-black hover:text-25-white mx-auto mb-8 block w-fit rounded px-4 py-2 transition-colors duration-300'
      >Resolución Exenta N°403.</a
    >
    <Schedule />
  </main>
</Arc2025Layout>
