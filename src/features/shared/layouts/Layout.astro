---
import '@/styles/global.css'

interface Props {
  title: string
  description: string
  favicon: string
}

const { title, description, favicon } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/png' href={favicon} />
    <title>{title}</title>

    <!-- Facebook Meta Tags -->
    <meta property='og:url' content='https://festivalarc.com' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:image' content='https://festivalarc.com/og_image.png' />
    <meta property='og:site_name' content='Festival ARC 2025' />
    <meta property='og:logo' content='https://festivalarc.com/ARC25.png' />

    <!-- Twitter Meta Tags -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta property='twitter:domain' content='festivalarc.com' />
    <meta property='twitter:url' content='https://festivalarc.com' />
    <meta name='twitter:title' content={title} />
    <meta name='twitter:description' content={description} />
    <meta name='twitter:image' content='https://festivalarc.com/og_image.png' />
    <link rel='sitemap' href='/sitemap-index.xml' />
  </head>
  <body
    class='font-neris bg-25-primary relative flex h-full min-h-dvh w-full flex-col items-center justify-between overflow-x-hidden'>
    <slot />
  </body>
</html>
<style>
  html {
    scroll-behavior: smooth;
  }
</style>
